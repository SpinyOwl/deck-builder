<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.spinyowl.cards.controller.StartupController"
      spacing="15" alignment="CENTER" style="-fx-padding: 40;">
    <Label text="Card Renderer" style="-fx-font-size:24px; -fx-font-weight:bold;" />
    <HBox spacing="10">
        <Button text="Create New Project" onAction="#onCreateProject"/>
        <Button text="Open Existing Project" onAction="#onOpenProject"/>
    </HBox>
    <Label fx:id="statusLabel" textFill="gray" />
</VBox>
