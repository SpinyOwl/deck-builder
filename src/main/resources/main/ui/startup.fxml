<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.spinyowl.cards.controller.StartupController"
      spacing="15" alignment="TOP_CENTER" style="-fx-padding: 40;" prefWidth="500">
    <Label text="SpinyOwl.DeckBuilder" style="-fx-font-size:24px; -fx-font-weight:bold;" />
    <HBox spacing="10">
        <Button text="Create New Project" onAction="#onCreateProject"/>
        <Button text="Open Existing Project" onAction="#onOpenProject"/>
    </HBox>
    <VBox spacing="5" prefWidth="460">
        <Label text="Recent Projects" style="-fx-font-weight: bold;" />
        <ListView fx:id="recentProjectsList" prefHeight="200">
            <placeholder>
                <Label text="No recent projects" textFill="gray" />
            </placeholder>
        </ListView>
    </VBox>
    <Label fx:id="statusLabel" textFill="gray" />
</VBox>
